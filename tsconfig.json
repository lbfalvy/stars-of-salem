{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": [ "es2018", "DOM" ],
    "target": "es2018",
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop" : true,
    "allowJs": false,
    "module": "CommonJS",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "typeRoots": ["./custom_types"],
    "types": ["node", "jasmine"]
  }
}